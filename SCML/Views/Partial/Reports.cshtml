        <h3 class="panel-title">Analytical Reports</h3>
    </div>
    <div class="panel-body">
        @if (Model.Reports != null)
        {
            foreach (var item in Model.Reports)
            {
                <div class="alert alert-dismissible alert-warning">
                    <a href="@item.href" class="alert-link"><strong>@item.title</strong><p style="font-weight:normal;"> @item.summary</p></a>
                </div>
            }
        }

