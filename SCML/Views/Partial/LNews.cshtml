@model SCML.Models.LNewsViewModel
@{
    Layout = null;
}


<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Latest News</h3>
    </div>
    <div class="panel-body">

        @if (Model.LNews != null)
        {
            foreach (var item in Model.LNews)
            {
                <div class="alert alert-dismissible alert-warning">
                    <a href="@item.href" class="alert-link"><strong>@item.title</strong><p style="font-weight:normal;"> @item.summary</p></a>
                </div>
            }
        }
        <div class="panel-footer" style="text-align:right">
            <a class="btn btn-warning"  href="@Url.Action("MoreList", "Contents", new { type = "LNews" })">More</a>
        </div>

    </div>
</div>
