@model SCML.Models.PostsViewModel
@{
    Layout = null;
}

<h3>Recent Post</h3>
@if (Model.Posts != null)
{
    foreach (var item in Model.Posts)
    {
        <a href="@Url.Action("Detail","Event", new { id = item.id})">
            <blockquote>
                <h4 class="list-group-item-heading">@item.title</h4>
                <p class="list-group-item-text">@item.summary</p>
                <small><cite title="Anroid App Available">@item.publish_date</cite></small>
            </blockquote>
        </a>
    }
}

