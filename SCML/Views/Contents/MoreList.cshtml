@model IEnumerable<SCML.Models.Content>

@{
    ViewBag.Title = "More Content";
}

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading_@item.id">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_@item.id"  aria-controls="collapse_@item.id">
                        @item.title
                    </a>
                </h4>
            </div>
            <div id="collapse_@item.id" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_@item.id">
                <div class="panel-body">
                    @Html.Raw(@item.contents)
                </div>
            </div>
        </div>
    }
}
    
</div>






